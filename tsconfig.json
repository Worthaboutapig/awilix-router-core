{
  "exclude": ["node_modules", "lib"],
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./lib",
    "strict": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "target": "ES2021",
    "module": "Node16",
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2021"]
  }
}
